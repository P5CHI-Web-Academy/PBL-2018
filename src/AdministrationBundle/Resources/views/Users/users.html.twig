{% extends '@Administration/base.html.twig' %}

{% block body %}
    <div class="body main">
        <div class="title-create-slide">
            <h3 class="title-create-slide-text">Users Info</h3>
            <ion-icon name="people" class="icons icon-users" style="font-size: 30px; margin-left: 20px;"></ion-icon>
        </div>
        <div class="line-under-title"></div>
        <div class="table-locations-div">
            <table class="table table-locations">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Supervisor</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>

                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.password }}</td>
                        <td>
                            {% if user.isSupervisor == 1 %}
                            Yes
                            {% else %}
                            No
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}"><ion-icon name="create" class="icons icons-edit-delete icon-edit"></ion-icon></a>
                            <a href="{{ path('user_delete', {'id': user.id}) }}" onclick="return confirm('Are you sure?')"><ion-icon name="trash" class="icons icons-edit-delete icon-trash"></ion-icon></a>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div class="button-add-new-location">
                <a href="{{ path('users_new') }}"><button class="btn btn-primary">Add New User</button></a>
            </div>
        </div>
    </div>
